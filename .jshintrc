{
    "globals": {
        "App"        : true,
        "io"         : true,
        "console"    : true,
        "require"    : false
    },

    "browser"        : true,
    "jquery"         : true,

    "camelcase"      : true,
    "curly"          : false,
    "eqeqeq"         : true,
    "eqnull"         : true,
    "forin"          : true,
    "indent"         : 4,
    "latedef"        : "nofunc",
    "maxcomplexity"  : 10,
    "maxdepth"       : 3,
    "maxparams"      : 3,
    "newcap"         : true,
    "noarg"          : true,
    "nonbsp"         : true,
    "quotmark"       : "single",
    "undef"          : true,
    "unused"         : "vars"
}
