# editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
charset = ascii
indent_style = space
indent_size = 4

[*.js]
indent_style = space

[*.scss]
indent_style = space

[*.html]
indent_style = space

[*.md]
trim_trailing_whitespace = false
